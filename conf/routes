# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /api/                       controllers.TopicController.getTopLevel()
GET     /api/*parentId              controllers.TopicController.get(parentId)
POST    /api/                       controllers.TopicController.createTopLevel()
POST    /api/*parentId              controllers.TopicController.create(parentId)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /                           controllers.Application.index(topic="")
GET     /*topic                     controllers.Application.index(topic)
